{{#each erros}}

<div class="alert alert-danger">{{texto}}</div>

{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <h4>Nova postagem</h4>
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control" required>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" required>
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" required>
            <label for="descricao">Conteúdo: </label>
            <textarea name="conteudo" class="form-control"></textarea required>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-select" >
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">criar postagem</button>
        </form>
    </div>

</div>